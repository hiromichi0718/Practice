<h1>Posts Index</h1>
<!-- トップ画面に戻るボタン -->
<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td>
        <!-- app/views/posts/index.html.erb など -->
        <div class="inline-buttons">
          <%= link_to 'Show', post_path(post), method: :get, class: 'btn btn-primary', form: { class: 'inline-form' } %>
          <%= link_to 'Edit', edit_post_path(post), method: :get, class: 'btn btn-primary', form: { class: 'inline-form' } %>
          <%= link_to 'Destroy', post_path(post), method: :delete, data: { turbo_method: :delete }, class: 'btn btn-danger' %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>
